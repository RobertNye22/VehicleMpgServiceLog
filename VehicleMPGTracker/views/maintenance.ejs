  <script>
    // select the button element
    var dropdownBtn = document.getElementById("maintenance-type-dropdown");
  
    // select all dropdown items
    var dropdownItems = document.querySelectorAll(".dropdown-item");
  
    // add a click event listener to each dropdown item
    dropdownItems.forEach(function(item) {
      item.addEventListener("click", function() {
        // set the button text to the selected item's text
        dropdownBtn.innerText = item.innerText;
      });
    });
  </script>

<script>
  // Variables for card index and container
  let cardIndex = 0;
  const cardContainer = document.getElementById("cardContainer");
  const addCardButton = document.getElementById("addCardButton");

  // Function to add a new card
  function addCard() {
    // Create a new card element
    const newCard = document.createElement("div");
    newCard.className = "div .row mb-4";
    newCard.innerHTML = `
                    <div>
                      <div class="card border-info">
                        <div class="card-header d-flex justify-content-between align-items-center">
                          Enter Part Info
                          <button class="btn btn-danger delete-card-btn" data-card-index="${cardIndex}">Delete</button>
                        </div>
                        <div class="row m-2">
                          <div class="col-12">
                            <p>Part Name: *</p>
                            <div class="input-group">
                              <span class="input-group-text bg-custom">
                                <i class="bi bi-caret-right-fill text-white"></i>
                              </span>
                              <input id="name${cardIndex}" name="name${cardIndex}" type="text" class="form-control" placeholder="Part Name" required />
                            </div>
                          </div>
                        </div>
                        <div class="row m-2">
                          <div class="col-12">
                            <p>Part Description:</p>
                            <div class="input-group">
                              <span class="input-group-text bg-custom">
                                <i class="bi bi-caret-right-fill text-white"></i>
                              </span>
                              <input id="partDescription${cardIndex}" name="partDescription${cardIndex}" type="text" class="form-control" placeholder="Part Description"/>
                              <!-- <textarea name="partDescription" id="partDescription" cols="30" rows="10" class="form-control" placeholder="Part Description"></textarea> -->
                            </div>
                          </div>
                        </div>
                        <div class="row m-2">
                          <div class="col-6">
                            <p>Part Cost:</p>
                            <div class="input-group">
                              <span class="input-group-text bg-custom">
                                <i class="bi bi-currency-dollar text-white"></i>
                              </span>
                              <input id="cost${cardIndex}" name="cost${cardIndex}" type="text" class="form-control" placeholder="Cost"/>
                            </div>
                          </div>
                          <div class="col-6">
                            <p>Part Number:</p>
                            <div class="input-group">
                              <span class="input-group-text bg-custom">
                                <i class="bi bi-currency-dollar text-white"></i>
                              </span>
                              <input id="number${cardIndex}" name="number${cardIndex}" type="text" class="form-control" placeholder="Part Number"/>
                            </div>
                          </div>
                        </div>
                        <div class="row m-2 mb-4">
                          <div class="col-6">
                            <p>Part Supplier:</p>
                            <div class="input-group">
                              <span class="input-group-text bg-custom">
                                <i class="bi bi-caret-right-fill text-white"></i>
                              </span>
                              <input id="partSupplier${cardIndex}" name="partSupplier${cardIndex}" type="text" class="form-control" placeholder="Part Supplier"/>
                            </div>
                          </div>
                          <div class="col-6">
                            <p>Part Manufacturer:</p>
                            <div class="input-group">
                              <span class="input-group-text bg-custom">
                                <i class="bi bi-caret-right-fill text-white"></i>
                              </span>
                              <input id="partManufacturer${cardIndex}" name="partManufacturer${cardIndex}" type="text" class="form-control" placeholder="Part Manufacturer"/>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                  `;

    // Append the new card to the container
    cardContainer.appendChild(newCard);

    // Increment the card index
    cardIndex++;
  }

  // Function to delete a card
  function deleteCard(cardIndex) {
    const cardToDelete = document.querySelector(`.card .delete-card-btn[data-card-index="${cardIndex}"]`).closest(".card");
    if (cardToDelete) {
      cardToDelete.remove();
    }
  }

  // Event listener for adding a card
  addCardButton.addEventListener("click", addCard);

  // Event listener for deleting a card
  cardContainer.addEventListener("click", function(event) {
    if (event.target.classList.contains("delete-card-btn")) {
      const cardIndexToDelete = event.target.dataset.cardIndex;
      deleteCard(cardIndexToDelete);
    }
  });

</script>

